pipeline {
  agent {
    docker {
      image 'golang:1.11'
      args '-v $HOME:/root -v /usr/bin/kubectl:/usr/bin/kubectl'
    }
  }
  stages {
    stage('test') {
      steps {
        sh """
            mkdir -p /go/src/github.com/kubesphere
            ln -s `pwd` /go/src/github.com/kubesphere/s2ioperator
            cd /go/src/github.com/kubesphere/s2ioperator
            make e2e-test
          """
      }
    }
  }
}
